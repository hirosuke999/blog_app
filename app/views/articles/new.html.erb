<h1>New Article</h1>

<%= form_for(@article) do |f| %>
    <div class="form-group">
      <%= f.select :title, ['foo', 'bar', 'baz'], selected: 'foo', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.text_area :text, size: "20x10", class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.fields_for :tags do |t| %>
        <%= t.text_field :name, class: 'form-control' %>
      <% end %>
    </div>
    <%= f.submit 'Create' %>
<% end %>